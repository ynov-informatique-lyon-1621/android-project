        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity" />
        <activity android:name=".UI.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.DetailAnnonceActivity" />
        <activity android:name=".UI.IdentificationActivity" />
        <activity android:name=".UI.DeposerAnnonceActivity" />
        <activity android:name=".UI.ConfirmationDeposerAnnonce" />
        <activity android:name=".UI.ContacterVendeurActivity" />
        <activity android:name=".UI.ConfirmationMessageActivity"></activity>
    </application>

</manifest>