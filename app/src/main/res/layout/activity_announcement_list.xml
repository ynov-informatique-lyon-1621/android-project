<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="left"
    android:orientation="vertical"
    tools:context=".ui.AnnouncementListActivity">

    <TextView
        android:id="@+id/filterToogle"
        style="@style/collapseHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_card_spacing"
        android:background="@drawable/borders"
        android:drawableBottom="@drawable/borders"
        android:paddingLeft="@dimen/vertical_card_spacing"
        android:paddingRight="@dimen/vertical_card_spacing"
        android:text="@string/filter_label" />

    <com.github.chuross.library.ExpandableLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- any child views -->

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="42dp">

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/search_label"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/dateIpt"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="@string/date_label"
                android:inputType="date" />

            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:entries="@array/type_select" />
        </LinearLayout>

    </com.github.chuross.library.ExpandableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:visibility="gone" />

</LinearLayout>
