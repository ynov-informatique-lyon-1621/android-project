<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CreatScrollDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/pictureDetail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                android:contentDescription="PictureOfArticle"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/titleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titre"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/priceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prix"
                android:textAlignment="textEnd"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/dateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAlignment="textEnd"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/categoryDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CatÃ©gorie"
                android:textAlignment="viewStart"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/descriptionDetails"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="description" />

            <TextView
                android:id="@+id/vendorDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TextView"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/contactBtn"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:elevation="16dp"
                    android:text="Contacter le vendeur"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
</ScrollView>