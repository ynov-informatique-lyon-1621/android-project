<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageArticle"
        android:layout_width="49dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/titreMenu"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/categorieMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titreMenu"
        android:layout_alignBottom="@+id/imageArticle"
        android:text="TextView"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/prixMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/titreMenu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="59dp" />



</RelativeLayout>