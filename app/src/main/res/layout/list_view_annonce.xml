<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lVAnnonce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:weightSum="4">

    <ImageView
        android:id="@+id/listViewImage"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:srcCompat="@drawable/no_image" />

    <TextView
        android:id="@+id/listViewTitre"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listViewImage"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:textColor="#222222"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listViewPrix"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listViewFav"
        android:layout_alignStart="@+id/listViewTitre"
        android:layout_weight="1"
        android:textColor="#222222"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/listViewFav"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="65dp"
        android:layout_weight="1"
        android:background="@drawable/coeur_vide"
        android:textColor="#222222"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/listViewDel"
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/listViewFav"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listViewCate"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewTitre"
        android:layout_toEndOf="@+id/listViewImage"
        android:layout_margin="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/listViewDate"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listViewTitre"
        android:layout_below="@+id/listViewPrix"
        android:text="TextView" />

</RelativeLayout>