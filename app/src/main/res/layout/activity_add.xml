<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddActivity">

        <ImageView
            android:id="@+id/addImage"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_shadow_start_color"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/addImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Sélectionnez une photo"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addName"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nom*" />

        <EditText
            android:id="@+id/addEmail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Adresse mail*" />

        <EditText
            android:id="@+id/addPassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Mot de passe*" />

        <EditText
            android:id="@+id/addPasswordConf"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirmation du mot de passe*" />

        <EditText
            android:id="@+id/addTitle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addPasswordConf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Titre*" />

        <EditText
            android:id="@+id/addLocation"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ville ou code postal*" />

        <EditText
            android:id="@+id/addCategory"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addLocation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Catégorie*" />

        <EditText
            android:id="@+id/addPrice"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addCategory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Prix*" />

        <EditText
            android:id="@+id/addDescription"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:hint="Description*" />

        <Button
            android:id="@+id/addButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="Déposer mon annonce" />

    </RelativeLayout>
</ScrollView>