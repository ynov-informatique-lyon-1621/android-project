<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ConfirmationMessageActivity">

    <ImageView
        android:id="@+id/imageContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/titreConfirm"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/vendeurConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-70dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/prixConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="86dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/catConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="141dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/dateConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/messageDeConfirm"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/messageDeConfirm"
        android:layout_width="221dp"
        android:layout_height="167dp"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/retourConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/catConfirm"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:text="Retour Recherche" />

    <Button
        android:id="@+id/retourAnnonceConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/retourConfirm"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Retour Annonce" />
</RelativeLayout>