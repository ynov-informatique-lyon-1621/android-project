<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AnnonceActivity">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="textView"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/categorie"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vendeur"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="182dp"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="21dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/vendeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="51dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/contacter"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_below="@+id/vendeur"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:text="Contacter"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="284dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="141dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="141dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>