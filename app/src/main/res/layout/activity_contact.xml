<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ActivityContact">

    <EditText
        android:id="@+id/namecontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/mailcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="187dp" />

    <EditText
        android:id="@+id/telcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/messagecontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="102dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitcontact"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:text="Envoyer" />

    <Button
        android:id="@+id/resetcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/submitcontact"
        android:layout_centerHorizontal="true"
        android:text="Reinitialiser" />

    <Button
        android:id="@+id/retourcontact"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/submitcontact"
        android:text="Retour à l'annonce" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/namecontact"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-153dp"
        android:text="Nom*" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mailcontact"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-236dp"
        android:text="Email*" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/telcontact"
        android:layout_alignParentStart="true"
        android:text="Numéro de téléphone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messagecontact"
        android:layout_alignParentStart="true"
        android:text="Message*" />

    <ImageView
        android:id="@+id/imagecontact"
        android:layout_width="113dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/titrecontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="TITRE" />

    <TextView
        android:id="@+id/prixcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagecontact"
        android:layout_toEndOf="@+id/textView4"
        android:text="PRIX" />

    <ImageView
        android:id="@+id/imagevendeurcontact"
        android:layout_width="73dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/noun" />

    <TextView
        android:id="@+id/vendeurcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imagevendeurcontact"
        android:layout_below="@+id/imagecontact"
        android:text="NOM VENDEUR" />

    <TextView
        android:id="@+id/datecontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:text="Date" />

    <TextView
        android:id="@+id/categoriecontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="Catégorie" />

</RelativeLayout>