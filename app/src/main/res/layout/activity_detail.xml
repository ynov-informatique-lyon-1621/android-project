<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ActivityDetail">


    <TextView
        android:id="@+id/TitleDetailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="12dp"
        android:text="Titre"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/CatDetailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TitleDetailView"
        android:layout_below="@+id/TitleDetailView"
        android:text="Categorie"
        android:textSize="10sp"
        android:typeface="serif"
        android:visibility="visible"
        app:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/PriceDetailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/CatDetailView"
        android:layout_marginEnd="103dp"
        android:text="Prix"
        android:textSize="10sp"
        android:visibility="visible" />

</RelativeLayout>