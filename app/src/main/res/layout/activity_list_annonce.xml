<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutListAnnonce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.ListAnnonceActivity">

    <Button
        android:id="@+id/rechercherListAnnonce"
        android:layout_width="310dp"
        android:layout_height="61dp"
        android:layout_below="@+id/categorieCreationAnnonce"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="@string/RECHERCHER"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/localisationListAnnonce"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/researchListAnnonce"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/Localisation"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/categorieCreationAnnonce"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/localisationListAnnonce"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="categorie"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/researchListAnnonce"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/RechercheProduit"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/listAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rechercherListAnnonce"
        android:layout_margin="5dp" />


</RelativeLayout>