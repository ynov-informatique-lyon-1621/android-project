<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ynov.lesbonnesaffairesdebibi.ViewModel.AdDetail"
    tools:showIn="@layout/activity_ad_detail">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="139dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <LinearLayout
                    android:id="@+id/linearLayoutAfterContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Votre message a bien été envoyé au vendeur."
                        tools:text="Votre message a bien été envoyé au vendeur." />

                    <TextView
                        android:id="@+id/sellerLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sellerLine" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bonne journée,"
                        tools:text="Bonne journée," />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="L'équipe de lesbonnesaffairesdebibi.fr"
                        tools:text="L'équipe de lesbonnesaffairesdebibi.fr" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/backHome"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Retour à votre recherche" />

                        <Button
                            android:id="@+id/goBack"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Retour à l'annonce" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/adDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <LinearLayout
                    android:id="@+id/linearLayoutMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/senderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:ems="10"
                        android:hint="Nom*"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/senderEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17"
                        android:ems="10"
                        android:hint="Email*"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/senderPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:ems="10"
                        android:hint="Téléphone"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/senderMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:ems="10"
                        android:hint="Message*"
                        android:inputType="textMultiLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/sendMessage"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Envoyer" />

                        <Button
                            android:id="@+id/resetMessage"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="130dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Réinitialiser" />

                        <Button
                            android:id="@+id/cancelMessage"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="130dp"
                            android:layout_height="50dp"
                            android:text="Retour à l'annonce" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/adImg"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/default_ad" />

        <LinearLayout
            android:id="@+id/linearLayoutAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/adImg"
            android:layout_toStartOf="@+id/linearLayoutContact"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/adPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/adDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/adCateg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutContact"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="13dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sellerImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/adAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>

            <Button
                android:id="@+id/contactButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacter" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
