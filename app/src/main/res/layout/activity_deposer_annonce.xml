<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DeposerAnnonceActivity">

    <EditText
        android:id="@+id/nomDepAn"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Nom*"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/emailDepAn"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:ems="10"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/pwdDepAn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="146dp"
        android:ems="10"
        android:hint="Password*"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/pwd2DepAn"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:layout_toStartOf="@+id/validerDepAn"
        android:ems="10"
        android:hint="Confirmer Password*"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinnerDepAn"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="88dp" />

    <EditText
        android:id="@+id/titreDepAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="275dp"
        android:ems="10"
        android:hint="titre*"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/prixDepAn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="Prix*"
        android:inputType="number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/descDepAn"
        android:layout_width="175dp"
        android:layout_height="87dp"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="365dp"
        android:ems="10"
        android:hint="Description*"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Button
        android:id="@+id/validerDepAn"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/annulerDepAn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:text="Valider"
        android:textSize="9sp" />

    <Button
        android:id="@+id/annulerDepAn"
        android:layout_width="72dp"
        android:layout_height="38dp"
        android:layout_below="@+id/descDepAn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="Annuler"
        android:textSize="9sp" />

    <Button
        android:id="@+id/selectImageDepAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nomDepAn"
        android:layout_alignStart="@+id/nomDepAn"
        android:layout_marginBottom="-52dp"
        android:text="Select File" />

    <ImageView
        android:id="@+id/imageDepAn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/filePathDepAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/selectImageDepAn"
        android:layout_toEndOf="@+id/spinnerDepAn"
        android:text="Select file..." />

</RelativeLayout>